cat > .gitignore << 'EOF'
# Node
node_modules/
**/node_modules/

# client & server specific (explicit)
client/node_modules/
server/node_modules/

# environment
.env
.env.*.local
.env.local

# build / output
dist/
build/
out/
.next/

# logs
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*
package-lock.json?        # optional: commit package-lock if you want deterministic installs

# OS / editor
.DS_Store
.vscode/
.idea/

# misc
coverage/
EOF
    